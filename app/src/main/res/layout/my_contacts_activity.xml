<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ActivityMyContacts">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUpperBlock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:background="?attr/colorPrimary">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvContacts"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginStart="@dimen/marginBig"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/largeFontSize"
            app:layout_constraintBottom_toBottomOf="@id/ibBackArrow"
            app:layout_constraintEnd_toStartOf="@id/ib_search"
            app:layout_constraintStart_toEndOf="@id/ibBackArrow"
            app:layout_constraintTop_toTopOf="@id/ibBackArrow"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            app:layout_constraintStart_toEndOf="@id/tvContacts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ibBackArrow"
            app:layout_constraintBottom_toBottomOf="@id/ibBackArrow"
            android:layout_marginEnd="@dimen/marginBig"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginBig"
            android:clickable="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/add_contacts"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/smallFontSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ibBackArrow"
            app:layout_constraintVertical_bias="0.7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clUpperBlock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/recycler_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>